<customUI xmlns="http://schemas.microsoft.com/office/2006/01/customui" onLoad="ribbon_toolbox_afterLoaded">
    <ribbon>
        <tabs>
            <tab id="tab.toolbox" getLabel="getLabel_toolbox">
                <group id="group.session" getVisible="getVisible_toolbox" getLabel="getLabel_toolbox">
                    <labelControl id="label.username" getVisible="getVisible_toolbox" getLabel="getLabel_toolbox" />
                    <labelControl id="label.environment" getVisible="getVisible_toolbox" getLabel="getLabel_toolbox" />
                </group>
                <group id="group.actions" getVisible="getVisible_toolbox" getLabel="getLabel_toolbox">
                        
                </group>
                <group id="group.settings" getVisible="getVisible_toolbox" getLabel="getLabel_toolbox">
                    <menu id="menu.settings" getVisible="getVisible_toolbox" getLabel="getLabel_toolbox" size="large" getImage="getImage_toolbox" >
                        <button id="button.settings.changeLanguage" getVisible="getVisible_toolbox" getEnabled="getEnabled_toolbox" getLabel="getLabel_toolbox" getImage="getImage_toolbox" getScreentip="getScreentip_toolbox" onAction="action_toolbox" />
                    </menu>
                </group>
            </tab>
        </tabs>
    </ribbon>
</customUI>